summary: Kdump NFS dumping tests
discover:
  - name: Set up crashkernel
    how: fmf
    test:
     - setup/default_crashkernel
    where:
      - client
  - name: Set up NFS server
    how: fmf
    test:
     - setup/nfs_server
    where:
      - server
  - name: Setup NFS client
    how: fmf
    test:
     - setup/nfs_client
    where:
      - client
  - name: Panic kernel
    how: fmf
    test:
     - /setup/trigger_crash
    where:
      - client
  - name: Check vmcore
    how: fmf
    test:
     - /tests/check_vmcore/nfs
    where:
      - server
